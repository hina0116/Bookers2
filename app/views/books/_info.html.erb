 <h1>User info</h1>
  <%= image_tag user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div>
    <% if user == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
    <% end %>
  </div>