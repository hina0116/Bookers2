<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div>
    <% if @user == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
  </div>
</div>

<div>
  <h1>New Book</h1>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>

    <h4>Opinion</h4>
      <%= f.text_area :body %>

    <p></p>
    <%= f.submit 'Create Book' %>

  <% end %>
</div>

<div>
<% @books.each do |book| %>
<% end %>
</div>

<div>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to book_path(book.id) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <th><%= book.body %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>