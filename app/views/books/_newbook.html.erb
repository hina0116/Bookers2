<div class="center-block">
 <h2>New Book</h2>
  <%= form_with model: book, url: '/books', method: :post do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>

    <h4>Opinion</h4>
      <%= f.text_area :body %>

    <p></p>
      <button class="btn btn-success" type="submit">Create Book</button>

  <% end %>
</div>